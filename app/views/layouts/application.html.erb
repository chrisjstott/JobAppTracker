<!DOCTYPE html>
<html>
<head>
  <title>AppTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <ul class="login-logout">
    <% if logged_in? %>
      <li>Logged in as: <%= current_user.username %></li>
      <li><%= button_to "Logout", session_url, method: :delete %></li>
    <% else %>
      <%= button_to "Log In", new_session_url, method: :get %>
    <% end %>
  </ul>
</header>

<% if flash.now[:errors] %>
  <ul>
    <% flash.now[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<% if flash.now[:messages] %>
  <ul>
    <% flash.now[:messages].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container-fluid">
<%= yield %>
</div>

</body>
</html>
